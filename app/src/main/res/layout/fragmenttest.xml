<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    知识测试-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="知识测试"
        android:layout_marginTop="10dp"
        android:textSize="26sp" />

    <!--    随机自测-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:text="随机自测："
        android:textSize="26sp" />
    <Button
        android:id="@+id/choice_test"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:text="选择题自测"
        android:textSize="20sp" />
    <Button
        android:id="@+id/judge_test"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="90dp"
        android:text="判断题自测"
        android:layout_marginLeft="145dp"
        android:textSize="20sp" />

    <!--    竞赛问答-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="竞赛问答："
        android:layout_marginTop="230dp"
        android:textSize="26sp" />
    <Button
        android:id="@+id/competition_test"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="竞赛问答"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:textSize="20sp" />

    <!--    组卷公测-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="组卷公测"
        android:layout_marginTop="410dp"
        android:textSize="26sp" />
    <Button
        android:id="@+id/manage_group"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="管理群组"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="450dp"
        android:textSize="20sp" />
    <Button
        android:id="@+id/release_exam"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:visibility="invisible"
        android:text="发布试题"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="450dp"
        android:textSize="20sp" />
    <Button
        android:id="@+id/exam_record"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:visibility="invisible"
        android:text="考试结果"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="450dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/join_group"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="加入群组"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        android:layout_marginTop="450dp"
        android:textSize="20sp" />
    <Button
        android:id="@+id/join_exam"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="参加考试"
        android:layout_marginLeft="145dp"
        android:visibility="invisible"
        android:layout_marginTop="450dp"
        android:textSize="20sp" />


</RelativeLayout>