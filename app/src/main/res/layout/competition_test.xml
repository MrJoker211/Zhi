<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--标题-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="竞赛问答"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="28sp"/>

    <!--题号-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="168dp"
        android:textSize="26sp"/>
    <TextView
        android:id="@+id/title_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="26sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:text="题"
        android:layout_marginTop="60dp"
        android:textSize="26sp"/>

    <!--题目-->
    <TextView
        android:id="@+id/choice_title"
        android:layout_width="390dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"/>

    <!--A-->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_a"

        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/choice_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="70dp"
        android:textSize="20sp"/>

    <!--B-->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_b"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/choice_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="70dp"
        android:textSize="20sp"/>


    <!--C-->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_c"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/choice_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="70dp"
        android:textSize="20sp"/>

    <!--D-->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_d"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/choice_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="70dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_centerHorizontal="true"
        android:text="确定"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:textSize="26sp"
        android:text="剩余："/>
    <TextView
        android:id="@+id/last_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="80dp"
        android:text="10"
        android:textSize="26sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="120dp"
        android:textSize="26sp"
        android:text="分"/>
    <TextView
        android:id="@+id/last_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="160dp"
        android:text="10"
        android:textSize="26sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="200dp"
        android:textSize="26sp"
        android:text="秒"/>
</RelativeLayout>