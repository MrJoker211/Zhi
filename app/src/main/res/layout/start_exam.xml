<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--标题-->
    <TextView
        android:id="@+id/test_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="28sp"/>

    <!--题号-->
    <TextView
        android:id="@+id/di"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="第"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="168dp"
        android:textSize="26sp"/>
    <TextView
        android:id="@+id/title_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="26sp"/>
    <TextView
        android:id="@+id/ti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="220dp"
        android:text="题"
        android:layout_marginTop="60dp"
        android:textSize="26sp"/>

    <!--题目-->
    <TextView
        android:id="@+id/choice_title"
        android:layout_width="390dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"/>

    <!--A-->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_a"
        android:text="A , "
        android:visibility="invisible"
        android:textSize="16sp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/choice_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="70dp" />

    <!--B-->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_b"
        android:text="B , "
        android:visibility="invisible"
        android:textSize="16sp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/choice_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="70dp" />


    <!--C-->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_c"
        android:visibility="invisible"
        android:text="C , "
        android:textSize="16sp"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/choice_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="70dp" />

    <!--D-->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_d"
        android:text="D , "
        android:visibility="invisible"
        android:textSize="16sp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/choice_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="485dp"
        android:layout_marginLeft="70dp" />

    <!--选项-->
    <CheckBox
        android:id="@+id/right"
        android:text="对"
        android:textSize="20sp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"/>

    <CheckBox
        android:id="@+id/wrong"
        android:text="错"
        android:textSize="20sp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="270dp"/>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:text="开始答题"/>

    <Button
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="540dp"
        android:layout_centerHorizontal="true"
        android:text="确定"/>

    <TextView
        android:id="@+id/shengyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:textSize="26sp"
        android:visibility="invisible"
        android:text="剩余："/>
    <TextView
        android:id="@+id/last_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="80dp"
        android:visibility="invisible"
        android:text="10"
        android:textSize="26sp"/>
    <TextView
        android:id="@+id/fen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="120dp"
        android:visibility="invisible"
        android:textSize="26sp"
        android:text="分"/>
    <TextView
        android:id="@+id/last_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="160dp"
        android:visibility="invisible"
        android:text="10"
        android:textSize="26sp"/>
    <TextView
        android:id="@+id/miao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:visibility="invisible"
        android:layout_marginLeft="200dp"
        android:textSize="26sp"
        android:text="秒"/>
</RelativeLayout>